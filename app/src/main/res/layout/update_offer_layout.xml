<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Update Offers"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtTitleDisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="To update offer please fill all the details(you can't change category,subcategory and brand)" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtChooseCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_red_fill_white"
                android:padding="10dp"
                android:text="Choose category"
                android:textColor="@color/toolbar_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtChooseSubCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_red_fill_white"
                android:padding="10dp"
                android:text="Choose subcategory"
                android:textColor="@color/toolbar_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtChooseBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_red_fill_white"
                android:padding="10dp"
                android:text="Choose Brand"
                android:textColor="@color/toolbar_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_red_fill_white"
                android:hint="Product title"
                android:nextFocusDown="@+id/etProductDiscription"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/toolbar_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etProductDiscription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_red_fill_white"
                android:gravity="top|left"
                android:hint="Product description"
                android:imeOptions="actionDone"
                android:padding="10dp"
                android:textColor="@color/toolbar_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtValidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/button_border_black"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Validity:"
                    android:textColor="@color/background_color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/etStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/button_border_red_fill_white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Start date"
                    android:textColor="@color/toolbar_color"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/etEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/button_border_red_fill_white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="End date"
                    android:textColor="@color/toolbar_color"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtAddProductImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_red_fill_white"
                android:gravity="center"
                android:padding="10dp"
                android:text="Add/Update product images"
                android:textColor="@color/toolbar_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:src="@drawable/no_image_icon"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/imgOfferPicNotFound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:src="@drawable/no_image_icon"
                android:visibility="visible"/>


            <!-- <HorizontalScrollView
                 android:id="@+id/scroll1"
                 android:layout_width="match_parent"
                 android:layout_height="140dp"
                 android:layout_marginLeft="8dp"
                 android:layout_marginRight="8dp"
                 android:layout_marginTop="10dp"
                 android:visibility="gone">

                 <LinearLayout
                     android:id="@+id/lnrImages"
                     android:layout_width="140dp"
                     android:layout_height="140dp"
                     android:layout_marginLeft="8dp"
                     android:layout_marginRight="8dp"
                     android:orientation="horizontal"></LinearLayout>
             </HorizontalScrollView>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"></View>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtAdditional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Additional information"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<CheckBox
                    android:id="@+id/checkboxPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtEnterPercentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Enter Percentage(%)"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </RelativeLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtChoosePercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_red_fill_white"
                android:padding="10dp"
                android:text="Select Percentage Type"
                android:textColor="@color/toolbar_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_red_fill_white"
                android:hint="Enter Percentage(%)"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/toolbar_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtOr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="---------OR---------" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<CheckBox
                    android:id="@+id/checkboxPrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtEnterPriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Enter Price"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </RelativeLayout>


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etActualPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_red_fill_white"
                android:hint="Actual Price"
                android:inputType="number"
                android:nextFocusDown="@+id/etDiscountPrice"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/toolbar_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etDiscountPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_red_fill_white"
                android:hint="Discount Price"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/toolbar_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnSubmitOffer"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@color/toolbar_color"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="Update"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>